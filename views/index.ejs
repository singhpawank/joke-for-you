<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Joke for You</title>
    <link rel="stylesheet" href="styles/style.css">
</head>

<body>
    <h1><a href="/">Joke For You</a></h1>
    <form id="form" method="POST" action="/submit">
        <div class="flex">
            <div class="toggle-items">
                <h2>Categories</h2>
                <% const categories=["Programming", "Dark" , "Pun" , "Spooky" , "Christmas" , "Miscellaneous" ] %>
                    <% for(let i=0; i<6; i++){ %>
                        <div class="toggle-item">
                            <label for=<%=categories[i] %>> <%= categories[i] %> </label>
                            <input type="checkbox" class="toggle category" id=<%=categories[i] %> name="category" value=
                            <%= i %>>
                        </div>
                        <% } %>

            </div>

            <div class="toggle-items">
                <h2>Blacklist</h2>
                <% const blacklistFlags=["nsfw", "Religious" , "Political" , "Racist" , "Sexist" , "Explicit" ]; %>
                    <% for(let i=0; i<6; i++){ %>
                        <div class="toggle-item">
                            <label for=<%=blacklistFlags[i] %>> <%= blacklistFlags[i] %></label>
                            <input type="checkbox" class="toggle blacklist" id=<%=blacklistFlags[i] %> name="blacklist"
                            value=<%= i %>>
                        </div>
                        <% } %>

            </div>

        </div>
        <div class="centered-button">
            <button type="submit">Get a Joke</button>
        </div>
    </form>

    <div class="joke">
        <% if(typeof content !== 'undefined') {%>
        <% if(content.joke){ %>
            <p>
                <%= content.joke %>
            </p>
            <% }else{ %>
                <p>
                    <%= content.setup %>
                </p>
                <p>
                    <%= content.delivery %>
                </p>
                <% } %>
        <% }else{ %>
            <p>Opps..</p>
            <p class="error">
                <%= error %>
            </p>
        <% } %>
    </div>
    <script src="js/main.js" type="text/javascript"></script>
</body>

</html>